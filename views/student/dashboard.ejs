<%- include('../partials/header', { title: 'Student Dashboard' }) %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user-graduate me-2"></i>Student Dashboard</h2>
        <small class="text-muted">Welcome, <%= user.name %></small>
      </div>

      <!-- Quick Stats -->
      <div class="row g-4 mb-5">
        <div class="col-md-6">
          <div class="card bg-primary text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h5 class="card-title">My Projects</h5>
                  <h3><%= myProjects.length %></h3>
                </div>
                <i class="fas fa-project-diagram fa-2x opacity-75"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card bg-info text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h5 class="card-title">Available Projects</h5>
                  <h3><%= allProjects.length %></h3>
                </div>
                <i class="fas fa-eye fa-2x opacity-75"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <!-- My Projects -->
        <div class="col-lg-6 mb-4">
          <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h5 class="mb-0">My Projects</h5>
              <a href="/student/my-projects" class="btn btn-sm btn-primary">View All</a>
            </div>
            <div class="card-body">
              <% if (myProjects.length === 0) { %>
                <div class="text-center py-4">
                  <i class="fas fa-folder-open fa-2x text-muted mb-3"></i>
                  <p class="text-muted">You're not part of any projects yet</p>
                </div>
              <% } else { %>
                <% myProjects.slice(0, 3).forEach(project => { %>
                  <div class="border-bottom pb-3 mb-3">
                    <h6><%= project.title %></h6>
                    <p class="text-muted small mb-2">
                      Professor: <%= project.professor.name %>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                      <span class="badge bg-<%= project.status === 'active' ? 'success' : project.status === 'completed' ? 'primary' : 'warning' %>">
                        <%= project.status %>
                      </span>
                      <a href="/projects/<%= project._id %>" class="btn btn-sm btn-outline-primary">View</a>
                    </div>
                  </div>
                <% }) %>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Recent Projects -->
        <div class="col-lg-6 mb-4">
          <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h5 class="mb-0">Recent Projects</h5>
              <a href="/student/projects" class="btn btn-sm btn-success">View All</a>
            </div>
            <div class="card-body">
              <% allProjects.slice(0, 3).forEach(project => { %>
                <div class="border-bottom pb-3 mb-3">
                  <h6><%= project.title %></h6>
                  <p class="text-muted small mb-2">
                    Professor: <%= project.professor.name %> | <%= project.department %>
                  </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                      <i class="fas fa-users me-1"></i>
                      <%= project.students.length %> students
                    </small>
                    <a href="/projects/<%= project._id %>" class="btn btn-sm btn-outline-success">View</a>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
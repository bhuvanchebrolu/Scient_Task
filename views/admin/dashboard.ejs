<%- include('../partials/header', { title: 'Admin Dashboard' }) %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</h2>
        <small class="text-muted">Welcome, <%= user.name %></small>
      </div>

      <!-- Statistics Cards -->
      <div class="row g-4 mb-5">
        <div class="col-md-3">
          <div class="card bg-primary text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h5 class="card-title">Total Users</h5>
                  <h3><%= stats.totalUsers %></h3>
                </div>
                <i class="fas fa-users fa-2x opacity-75"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card bg-success text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h5 class="card-title">Professors</h5>
                  <h3><%= stats.totalProfessors %></h3>
                </div>
                <i class="fas fa-chalkboard-teacher fa-2x opacity-75"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card bg-info text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h5 class="card-title">Students</h5>
                  <h3><%= stats.totalStudents %></h3>
                </div>
                <i class="fas fa-user-graduate fa-2x opacity-75"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card bg-warning text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h5 class="card-title">Active Projects</h5>
                  <h3><%= stats.activeProjects %></h3>
                </div>
                <i class="fas fa-project-diagram fa-2x opacity-75"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Projects -->
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Recent Projects</h5>
          <a href="/admin/projects" class="btn btn-sm btn-primary">View All</a>
        </div>
        <div class="card-body">
          <% if (recentProjects.length === 0) { %>
            <p class="text-muted">No projects found.</p>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Professor</th>
                    <th>Department</th>
                    <th>Status</th>
                    <th>Created</th>
                  </tr>
                </thead>
                <tbody>
                  <% recentProjects.forEach(project => { %>
                    <tr>
                      <td>
                        <a href="/projects/<%= project._id %>" class="text-decoration-none">
                          <%= project.title %>
                        </a>
                      </td>
                      <td><%= project.professor.name %></td>
                      <td><%= project.department %></td>
                      <td>
                        <span class="badge bg-<%= project.status === 'active' ? 'success' : project.status === 'completed' ? 'primary' : 'warning' %>">
                          <%= project.status %>
                        </span>
                      </td>
                      <td><%= new Date(project.createdAt).toLocaleDateString() %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
<%- include('../partials/header', { title: 'Manage Projects' }) %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-project-diagram me-2"></i>Manage Projects</h2>
  </div>

  <div class="card">
    <div class="card-body">
      <% if (projects.length === 0) { %>
        <div class="text-center py-4">
          <i class="fas fa-project-diagram fa-3x text-muted mb-3"></i>
          <h5 class="text-muted">No projects found</h5>
        </div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Title</th>
                <th>Professor</th>
                <th>Department</th>
                <th>Students</th>
                <th>Status</th>
                <th>Created</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% projects.forEach(project => { %>
                <tr>
                  <td>
                    <a href="/projects/<%= project._id %>" class="text-decoration-none">
                      <%= project.title %>
                    </a>
                  </td>
                  <td><%= project.professor.name %></td>
                  <td><%= project.department %></td>
                  <td>
                    <% if (project.students.length > 0) { %>
                      <div class="d-flex flex-wrap gap-1">
                        <% project.students.forEach(student => { %>
                          <span class="badge bg-info position-relative">
                            <%= student.name %>
                            <button type="button" class="btn-close btn-close-white position-absolute top-0 start-100 translate-middle" 
                                    onclick="removeStudent('<%= project._id %>', '<%= student._id %>')" 
                                    style="font-size: 0.5rem; padding: 0.1rem;"
                                    title="Remove student">
                            </button>
                          </span>
                        <% }) %>
                      </div>
                      <small class="text-muted"><%= project.students.length %> student(s)</small>
                    <% } else { %>
                      <span class="badge bg-secondary">No students</span>
                    <% } %>
                  </td>
                  <td>
                    <span class="badge bg-<%= project.status === 'active' ? 'success' : project.status === 'completed' ? 'primary' : 'warning' %>">
                      <%= project.status %>
                    </span>
                  </td>
                  <td><%= new Date(project.createdAt).toLocaleDateString() %></td>
                  <td>
                    <button class="btn btn-sm btn-outline-primary" 
                            data-bs-toggle="modal" 
                            data-bs-target="#addStudentModal<%= project._id %>"
                            title="Add Student">
                      <i class="fas fa-user-plus"></i>
                    </button>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Add Student Modals -->
<% projects.forEach(project => { %>
  <div class="modal fade" id="addStudentModal<%= project._id %>" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add Student to "<%= project.title %>"</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <form action="/admin/projects/<%= project._id %>/students" method="POST">
          <div class="modal-body">
            <div class="mb-3">
              <label for="studentId<%= project._id %>" class="form-label">Select Student</label>
              <select class="form-select" id="studentId<%= project._id %>" name="studentId" required>
                <option value="">Choose a student...</option>
                <% 
                  // Filter out students who are already in this project
                  const availableStudents = allStudents.filter(student => 
                    !project.students.some(projectStudent => 
                      projectStudent._id.toString() === student._id.toString()
                    )
                  );
                %>
                <% if (availableStudents.length === 0) { %>
                  <option value="" disabled>No available students</option>
                <% } else { %>
                  <% availableStudents.forEach(student => { %>
                    <option value="<%= student._id %>">
                      <%= student.name %> (<%= student.email %>)
                    </option>
                  <% }) %>
                <% } %>
              </select>
              <% if (availableStudents.length === 0) { %>
                <div class="form-text text-muted">
                  All students have been added to this project or no students are available.
                </div>
              <% } %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" <%= availableStudents.length === 0 ? 'disabled' : '' %>>
              Add Student
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
<% }) %>

<!-- Remove Student Form (hidden) -->
<form id="removeStudentForm" method="POST" style="display: none;">
  <input type="hidden" name="_method" value="DELETE">
</form>

<script>
function removeStudent(projectId, studentId) {
  if (confirm('Are you sure you want to remove this student from the project?')) {
    const form = document.getElementById('removeStudentForm');
    form.action = `/admin/projects/${projectId}/students/${studentId}`;
    form.submit();
  }
}

// Enhanced search functionality for student selection
document.addEventListener('DOMContentLoaded', function() {
  // Add search functionality to select dropdowns
  document.querySelectorAll('select[name="studentId"]').forEach(select => {
    // Create a search input
    const searchInput = document.createElement('input');
    searchInput.type = 'text';
    searchInput.className = 'form-control mb-2';
    searchInput.placeholder = 'Search students...';
    
    // Insert search input before the select
    select.parentNode.insertBefore(searchInput, select);
    
    // Store original options
    const originalOptions = Array.from(select.options).slice(1); // Skip the first "Choose..." option
    
    // Search functionality
    searchInput.addEventListener('input', function() {
      const searchTerm = this.value.toLowerCase();
      
      // Clear current options (except the first one)
      select.innerHTML = '<option value="">Choose a student...</option>';
      
      // Filter and add matching options
      const filteredOptions = originalOptions.filter(option => 
        option.textContent.toLowerCase().includes(searchTerm)
      );
      
      filteredOptions.forEach(option => {
        select.appendChild(option.cloneNode(true));
      });
      
      // Show message if no results
      if (filteredOptions.length === 0 && searchTerm) {
        const noResultOption = document.createElement('option');
        noResultOption.value = '';
        noResultOption.textContent = 'No students found';
        noResultOption.disabled = true;
        select.appendChild(noResultOption);
      }
    });
  });
});
</script>


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Academic Project System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="fas fa-graduation-cap me-2"></i>Academic Projects
      </a>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <% if (currentUser) { %>
            <% if (currentUser.role === 'admin') { %>
              <li class="nav-item">
                <a class="nav-link" href="/admin/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/users">Users</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/projects">Projects</a>
              </li>
            <% } else if (currentUser.role === 'professor') { %>
              <li class="nav-item">
                <a class="nav-link" href="/professor/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/professor/projects">My Projects</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/professor/students">Students</a>
              </li>
            <% } else if (currentUser.role === 'student') { %>
              <li class="nav-item">
                <a class="nav-link" href="/student/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/student/projects">All Projects</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/student/my-projects">My Projects</a>
              </li>
            <% } %>
          <% } %>
        </ul>
        
        <ul class="navbar-nav">
          <% if (currentUser) { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                <i class="fas fa-user me-1"></i><%= currentUser.name %>
              </a>
              <ul class="dropdown-menu">
                <li><h6 class="dropdown-header"><%= currentUser.role.toUpperCase() %></h6></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <form action="/auth/logout" method="POST" class="d-inline">
                    <button type="submit" class="dropdown-item">
                      <i class="fas fa-sign-out-alt me-2"></i>Logout
                    </button>
                  </form>
                </li>
              </ul>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/register">Register</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Flash Messages -->
  <% if (success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  
  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <!-- Main Content -->
  <main class="container-fluid py-4">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="bg-light text-center py-3 mt-5">
    <div class="container">
      <p class="mb-0">&copy; 2024 Academic Project System. All rights reserved.</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>